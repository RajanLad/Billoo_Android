<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Billoo Base application theme. -->
    <style name="Theme.Billoo" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryForBilloo</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkForBilloo</item>
        <item name="colorAccent">@color/colorAccentForBilloo</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.Billoo.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Theme.Billoo.Splash" parent="Theme.Billoo">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.Billoo.Common" parent="Theme.Billoo">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Billoo.Home" parent="AppTheme.NoActionBar">
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccentForBilloo</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Billoo.AppBarOverlay" parent="Theme.Billoo" >
        <item name="android:navigationBarColor">@color/colorPrimaryDarkForBilloo</item>
        <item name="drawerArrowStyle">@style/HamburberStyle</item>

    </style>

    <style name="HamburberStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorPrimaryDarkForBilloo</item>
    </style>

    <style name="Theme.Billoo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:navigationBarColor">@color/colorPrimaryDarkForBilloo</item>
    </style>



</resources>
